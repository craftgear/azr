{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "azr",
  "version": "1.0.0",
  "identifier": "com.azr.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "AZR - Aozora Reader",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "fileDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}